// Escribir 
parametroEscribir ::= STRING | expresion | epsilon ;
sentenciaEscribir ::= ESCRIBIR PIZQUIERDO parametroEscribir PDERECHO DSENTENCIAS;

// Devolver
sentenciaDevolver ::= FRETURN expresion DSENTENCIAS;



